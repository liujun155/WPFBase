<Window x:Class="WPF路由事件.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF路由事件"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <local:CtrlDirectRouting></local:CtrlDirectRouting>
        <local:CtrlTunnelingRouting Grid.Column="1" Margin="5"></local:CtrlTunnelingRouting>
        <local:CtrlBubblingRouting Grid.Column="2" Margin="5" VerticalAlignment="Center"></local:CtrlBubblingRouting>
    </Grid>
</Window>
