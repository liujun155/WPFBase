<Window x:Class="WPF动画.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF动画"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="400" Width="480">
    <Window.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Width" Value="130"/>
            <Setter Property="Height" Value="35"/>
        </Style>
    </Window.Resources>
    <UniformGrid Rows="2" Columns="3">
        <Button Content="DoubleAnimation" Click="Button_Click"/>
        <Button Content="ColorAnimation" Click="Button_Click"/>
        <Button Content="SidebarAnimation" Click="Button_Click"/>
    </UniformGrid>
</Window>
